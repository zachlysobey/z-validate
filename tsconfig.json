{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2017", "es7", "es6", "dom"],
        "noImplicitAny": true,
        "declaration": true,
        "outDir": "./dist",
        "declarationDir": "./dist",
        "rootDir": "src",
        "strict": true,
        "types": ["node", "mocha"],
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/test-setup.ts"]
}
